datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@postgres:5432/postgres"
}

generator client {
  provider = "prisma-client-js"
}

model Game {
  id        String     @id @default(uuid())
  score     Int?
  solution  String
  entries   GameEntries[] @relation()
  status    Int        @default(0)
}

model GameEntries {
  id        String     @id @default(uuid())
  game      Game       @relation(fields: [gameId], references: [id])
  gameId    String
  row       Int
  answer    String
  correct   Boolean    @default(false)
  @@unique([gameId, row], map: "gameId_row_unique_constraint")
}